#include <iostream>
#include "../lab1/Node.h"

using namespace std;

class QueueLinkedList{
    public:
    Node* front;
    Node* rear;

    QueueLinkedList()
    {
        front = rear = nullptr;
    }

    bool isEmpty()
    {
        return (front == nullptr );
    }

    void display ()
    {
        Node* temp = front ;
        while ( temp != nullptr)
        {
            cout<< temp ->data << " ";
            temp = temp->next;
        }
        cout << endl;
    }

    void enqueue(int data)
    {
        Node* newNode= new Node();
        newNode ->data = data;

        if (isEmpty())
        {
            front = rear= newNode;
        }
        else 
        {
            rear ->next = newNode;
            rear= newNode;
        }

    }

    void dequeue()
    {
        //already empty
        if (isEmpty())
        {
            cout << "Queue is empty, cannot dequeue." << endl;
            return;
        }

        // only one item available
        else if (front == rear )
        {
            delete front;
            front = rear= nullptr;
        }

        //there are multiple items
        else 
        {
            Node* delPtr = front;
            front = front->next;
            delete delPtr;
        }
    }

    int getFront()
    {
        if(isEmpty())
        {
            cout << "Queue is empty." << endl;
            return -1; 
        }
        return front ->data;
    }
    bool isFound( int item )
    {
        bool isFound= false;
        Node* temp = front;
        while( temp != nullptr)
        {
            if( temp ->data == item)
            {
                isFound = true;
                
               
            }
            temp = temp->next;
        }
        return isFound;
    }

    void clearAllItems ()
    {
        while (!isEmpty())
        {
            dequeue();
        }
    }
};